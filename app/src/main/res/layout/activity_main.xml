<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background">

    <TextView

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Fallout Lockscreen Settings"
        android:id="@+id/textView1"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="Rotate to set combination, set pin number for fallback."
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="Disable default android lockscreen for best result"
        android:layout_below="@+id/textView2"
        android:textColor="#FFFFFF"
        />


    <ImageButton
        android:layout_width="220dip"
        android:layout_height="220dip"
        android:id="@+id/imageButton"
        android:layout_marginTop="100dp"
        android:background="@drawable/mainlock"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="310dip"
        android:layout_height="310dip"
        android:id="@+id/lockedge"
        android:background="@drawable/lockedge"
        android:layout_centerInParent="true"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="160dip"
        android:id="@+id/value_a"
        android:max="40"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@android:color/transparent"
        android:progress="20"
        />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="160dip"
        android:id="@+id/value_b"
        android:max="40"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:progress="40"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@android:color/transparent"
        />

    <ImageView
        android:layout_width="320dip"
        android:layout_height="320dip"
        android:id="@+id/imageView1"
        android:layout_marginTop="100dp"
        android:background="@drawable/pin"
        android:layout_centerInParent="true"
        android:rotation="45" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="320dip"
        android:id="@+id/imageView2"
        android:layout_marginTop="100dp"
        android:background="@drawable/screwdriver"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advance mode"
        android:id="@+id/advance"
        android:layout_above="@+id/saveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:buttonTint="#FFFFFF"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_locksetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:checked="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="Lockscreen Switch"
        android:layout_toRightOf="@+id/saveButton"
        android:layout_toEndOf="@+id/saveButton"
        android:textColor="#FFFFFF"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pin_number"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/saveButton"
        android:layout_toRightOf="@+id/saveButton"
        android:inputType="number"
        android:maxLength="6"
        android:hint="4-6 digits PIN"
        android:textColorHint="#FFFFFF"
        android:layout_alignRight="@+id/value_b"
        android:layout_alignEnd="@+id/value_b" />

</RelativeLayout>




